        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/novetats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrasuperior"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/novetats"
        android:layout_width="209dp"
        android:layout_height="52dp"
        android:layout_marginBottom="600dp"
        android:background="@drawable/lineasaz"
        android:text="Novedades"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/top"
        app:layout_constraintTop_toBottomOf="@+id/barrasuperior"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/genero"
        android:layout_width="203dp"
        android:layout_height="57dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="550dp"
        android:background="@drawable/lineasaz"
        android:text="GÃ©nero"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/genero2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/genero2"
        android:layout_width="209dp"
        android:layout_height="57dp"
        android:layout_marginBottom="550dp"
        android:background="@drawable/lineasaz"
        android:text="Plataforma"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/genero"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/barrasuperior"
        android:layout_width="411dp"
        android:layout_height="68dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="659dp"
        android:background="#48A4B0"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="112dp"
        android:src="@drawable/logotip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/llupa"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/llupa"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/barritas"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="340dp"
        android:src="@drawable/barritas"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>